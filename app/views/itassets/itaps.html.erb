  <p>Registered Asset count : <%= @itassets.count %>  
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%#= link_to '자산등록', new_itasset_path, class: 'btn btn-default' %> 
    <%#= link_to '자산등록', "/itassets/newss/#{@itassets.first.store_id}", class: 'btn btn-default' %> 
    <% if @sel_storename != "ALL"%>
      <%= link_to "자산등록@", 
            "/itassets/newss/#{@sel_store_id}", class: 'btn btn-default' %> 
      <%= link_to "자산명세표@", "/itassets/search/#{@sel_store_id}", class: 'btn btn-default'  %> 
    <% else %>
      <%= link_to "자산명세표",itassets_path, class: 'btn btn-default'  %> 
    <% end %>

    <%= link_to "Stores", stores_path, class: 'btn btn-default' %> 
    
    <%= link_to 'Home', '/', class: 'btn btn-default'%> 
  </p>
</div>

<table class="table" >
  <thead class="well">
    <tr>
      <th class="col-md-2">Device type</th>
      <th class="col-md-1">Quantity - du diligence</th>
      <th class="col-md-1">Quantity - Estimated</th>
      <th class="col-md-1">Difference</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
      <% count = {}%>
      <% total = 0 %>
      <% esmtcnt = {}%> 
      <% esmttot = 0 %> 
      <% @dtypes.each   { |d| count[d.id] = 0 ; esmtcnt[d.id] = 0} %>      
      <% @itassets.each do |i| %>
          <% dtype = i.dtype_id %>
          <% count[dtype]  = count[dtype]  + 1 %>
          <% total = total + 1 %>
      <% end %> 

      <% @itaqntesmts.each do |q|%>
          <% dtype = q.dtype_id%>
          <% esmtcnt[dtype] = esmtcnt[dtype] + q.qntesmt %>
          <% esmttot = esmttot +  q.qntesmt %>
      <% end %>
      
      <% count.each do | ck, cq | %>
          <tr>
            <td><%= @dtypes.find(ck).dtype %></td>
            <td align="center"><%= cq %></td>
            <td align="center"><%= esmtcnt[ck] %></td>
            <td align="center"><%= cq - esmtcnt[ck] %></td>
          </tr>
      <% end %> 
      <tr>
        <td> TOTAL </td>
        <td align="center"><%= total %>
        <td align="center"><%= esmttot %>
        <td align="center"><%= total - esmttot %>
      </tr>
    
  </tbody>
</table>

<%= link_to '자산명세표-전체', itassets_path %>   
<% if  @sel_storename != "ALL" && @itassets.count != 0 %>
    &nbsp;&nbsp; | &nbsp;&nbsp;
    <%= link_to 'Go to ' + @sel_storename  + ' IT asset list', "/itassets/search/#{@itassets.first.store_id} " %>
<% end %>
